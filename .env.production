# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# API Configuration
NEXT_PUBLIC_API_BASE=http://localhost:8001

# Turnstile Configuration (Cloudflare)
NEXT_PUBLIC_TURNSTILE_SITE_KEY=your_production_turnstile_site_key

# Developer Mode Configuration (Should be disabled in production)
NEXT_PUBLIC_DEV_MODE_ENABLED=false

# Turnstile Verification (Should be enabled in production)
NEXT_PUBLIC_DISABLE_TURNSTILE=true

# Authentication Middleware (Should be enabled in production)
NEXT_PUBLIC_DISABLE_AUTH_MIDDLEWARE=false

# Node Environment
NODE_ENV=production
